{
  "id": "script-to-ugc",
  "name": "Script \u2192 UGC Video",
  "description": "Script + Portrait \u2192 UGC Talking Head Video",
  "starred": true,
  "category": "video",
  "icon": "",
  "inputs": [
    {
      "id": "script",
      "type": "textarea",
      "label": "Script",
      "placeholder": "Hey, ich muss dir unbedingt von diesem Produkt erz\u00e4hlen...",
      "required": true
    },
    {
      "id": "portrait",
      "type": "image",
      "label": "Portrait (optional)",
      "required": false,
      "hint": "Or we generate a UGC creator for you"
    },
    {
      "id": "voice",
      "type": "select",
      "label": "Voice",
      "options": [
        {
          "value": "sarah",
          "label": "Sarah (DE, female)"
        },
        {
          "value": "adam",
          "label": "Adam (DE, male)"
        },
        {
          "value": "rachel",
          "label": "Rachel (EN, female)"
        },
        {
          "value": "josh",
          "label": "Josh (EN, male)"
        }
      ],
      "default": "sarah"
    },
    {
      "id": "style",
      "type": "select",
      "label": "UGC Style",
      "options": [
        {
          "value": "testimonial",
          "label": "Testimonial (direct to camera)"
        },
        {
          "value": "storytime",
          "label": "Storytime (casual erz\u00e4hlen)"
        },
        {
          "value": "review",
          "label": "Product Review"
        }
      ],
      "default": "testimonial"
    }
  ],
  "pipeline": [
    {
      "step": "tts",
      "provider": "elevenlabs",
      "input": "script",
      "output": "audio"
    },
    {
      "step": "generate_portrait",
      "provider": "nano-banana",
      "condition": "!portrait",
      "output": "portrait"
    },
    {
      "step": "lipsync",
      "provider": "runcomfy",
      "model": "lipsync",
      "input": [
        "portrait",
        "audio"
      ],
      "output": "video"
    }
  ],
  "output": {
    "type": "video",
    "format": "mp4",
    "resolution": "1080p"
  },
  "cost_estimate": "$1-2 per video",
  "time_estimate": "2-3 min"
}