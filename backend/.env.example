# gen.aditor.ai - Backend Environment Variables
# Copy this file to .env and fill in your values

# Server
PORT=3001
NODE_ENV=development

# Auth Protection (set to 'true' to require login for workflows)
# During beta: false (open access for testing)
# After launch: true (require login + subscription)
REQUIRE_AUTH=false

# Database
DB_PATH=./data/gen-aditor.db

# JWT Authentication
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_STRING_IN_PRODUCTION
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# ComfyUI
COMFYUI_URL=http://localhost:8188

# VAP Media API (for image/video generation)
VAP_API_KEY=your_vap_api_key_here
# Get from: https://vap.media/dashboard/keys

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
# Get from: https://dashboard.stripe.com

# Email (optional - for verification/reset)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your_sendgrid_api_key
# SMTP_FROM=noreply@gen.aditor.ai

# Or use Resend API
# RESEND_API_KEY=re_...

# Frontend URL (for email links)
FRONTEND_URL=https://gen.aditor.ai
